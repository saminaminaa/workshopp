{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Se connecter {% endblock %}


{% block MonBlock %}

<form class="user" action="index.php?page=connexion" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="email" class="form-control form-control-user" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Entrez votre adresse email...">
    </div>
    <div class="form-group">
        <input type="password" class="form-control form-control-user" id="Password" name="Password" placeholder="Mot de passe">
    </div>

    <button class="btn btn-primary btn-user btn-block" type="submit" name="btConnecter" id="btConnecter">
        Se connecter
    </button>
</form>

{% endblock %}