                                    </table>
                                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btSupprimer">Supprimer</button>
                                    <a class="btn btn-lg btn-primary btn-block" href="index.php?page=modiflangages">Ajouter des machines</a>
