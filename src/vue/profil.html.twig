                                <form  class="form-signin" action="index.php?page=profil" method="post" enctype="application/x-www-form-urlencoded">
                                    <table class="table table-hover table-striped">

                                        {% for c in liste %}
                                            <tr><td>{{c.langages}}</td><td><div class="btn-group btn-group-lg"><a href="index.php?page=profil&idEmail={{c.idEmail}}&idLangage={{ c.idLangage }}">
